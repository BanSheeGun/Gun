var f:array[0..10000] of int64;
    s,l,v:array[1..1000] of longint;
    n,m,i,j,k:longint;
function max(a,b:int64):int64;
begin
 if a>b then exit(a);
 exit(b);
end;
begin
 assign(input,'anime.in');reset(input);
// assign(output,'anime.out');rewrite(output);
 read(n,m);
 fillchar(f,sizeof(f),0);
 for i:=1 to m do read(s[i],l[i],v[i]);
 for i:=1 to m do
  for j:=s[i] to s[i]+l[i]-1 do
   for k:=j-l[i] to j do
    f[j]:=max(f[j],f[k]+v[i]*(j-k));
 for i:=0 to n do f[n]:=max(f[n],f[i]);
 writeln(f[n]);
 close(input);close(output);
end.
